@model BeautySalon.Models.Client
@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title" style="max-width: 600px; margin: 40px auto; background-color: #ffe6f0; padding: 30px; border-radius: 12px; box-shadow: 0 4px 10px rgba(0,0,0,0.1); font-family: 'Segoe UI', sans-serif;">
    <h2 id="title" style="color: #c2185b; text-align:center;">@ViewBag.Title</h2>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 style="text-align:center;">Create a new account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
        <div class="form-group">
            @Html.LabelFor(m => m.ClientName, new { @class = "control-label" })
            <input type="text" name="ClientName" id="ClientName" class="form-control"
                   placeholder="Full Name" required
                   pattern="[a-zA-Z\s]{2,50}"
                   oninvalid="this.setCustomValidity('Name must be 2-50 letters')"
                   oninput="this.setCustomValidity('')" />
        </div>

    
        <div class="form-group">
            <label for="Email" class="control-label">Email</label>
            <input type="email" name="Email" id="Email" class="form-control"
                   required placeholder="Email"
                   oninvalid="this.setCustomValidity('Enter a valid email')"
                   oninput="this.setCustomValidity('')" />
        </div>

      
        <div class="form-group">
            @Html.LabelFor(m => m.MobilePhone, new { @class = "control-label" })
            <input type="text" name="MobilePhone" id="MobilePhone" class="form-control"
                   placeholder="Mobile Phone" required
                   pattern="^\+?\d{9,15}$"
                   oninvalid="this.setCustomValidity('Enter a valid phone number')"
                   oninput="this.setCustomValidity('')" />
        </div>

        <div class="form-group"> <label for="Password" class="control-label">Password</label> <input type="password" name="Password" id="Password" class="form-control" required placeholder="Password" /> </div> <div class="form-group"> <label for="ConfirmPassword" class="control-label">Confirm Password</label> <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required placeholder="Confirm Password" /> </div>

        <div class="form-group" style="text-align:center; margin-top: 20px;">
            <input type="submit" value="Register" class="btn btn-custom" />
        </div>
    }
</main>

<style>
    .btn-custom {
        background-color: #c2185b;
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 8px;
        transition: 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #e91e63;
        }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
