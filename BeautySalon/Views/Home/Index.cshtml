@{
    ViewBag.Title = "Home Page";
}

<style>
    /* Dark pink buttons */
    .btn-custom {
        color: white;
        background-color: #c2185b; /* Dark pink */
        border: 2px solid #c2185b;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #e91e63; /* Lighter pink on hover */
            color: white;
            transform: scale(1.05);
        }

    /* Carousel captions with dark pink background */
    .carousel-caption {
        background-color: rgba(194, 24, 91, 0.7); /* semi-transparent dark pink */
        border-radius: 8px;
        padding: 8px 12px;
    }

    /* Image zoom on hover */
    .carousel-item img {
        transition: transform 0.5s ease;
    }

    .carousel-item:hover img {
        transform: scale(1.05);
    }
    /* Top images smaller and elegant */
    .top-img {
        max-height: 300px; /* adjust height as needed */
        object-fit: cover;
        border-radius: 12px; /* soft rounded edges for elegance */
        margin: 10px 0;
    }

</style>

<main>
    <section class="row justify-content-center align-items-center" aria-labelledby="aspnetTitle">
        <!-- First image -->
        <div class="col-md-5 text-center">
            <img src="~/1.jpg" class="img-fluid top-img" alt="Beauty Image" />
        </div>
        <!-- Second image (same one) -->
        <div class="col-md-5 text-center">
            <img src="~/2.jpg" class="img-fluid top-img" alt="Beauty Image" />
        </div>
    </section>

    <div class="row">
        <section class="col-md-4" aria-labelledby="nailsTitle">
            <h2 id="nailsTitle">Nails</h2>
            <p>
                Treat yourself to a fresh manicure or gel polish! From classic French tips to trendy nail art,
                we make sure your hands look flawless for any occasion.
            </p>
            <p>
                <button class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#nailsModal">
                    View Nail Services &raquo;
                </button>
            </p>
        </section>

        <section class="col-md-4" aria-labelledby="pedicuretitle">
            <h2 id="pedicuretitle">Pedicure</h2>
            <p>
                Treat your feet to our refreshing pedicure offers - from classic to deluxe spa treatments. Relax and step out with perfectly polished toes!
            </p>
            <p>
                <button class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#pedicureModal">
                    Explore Pedicure Options &raquo;
                </button>
            </p>
        </section>

        <section class="col-md-4" aria-labelledby="lashLiftTitle">
            <h2 id="lashLiftTitle">Lash Lift & Brow Styling</h2>
            <p>
                Accentuate your natural beauty with our lash lift and brow shaping services. Get that wide-eyed,
                lifted look without extensions!
            </p>
            <p>
                <button class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#browModal">
                    See Lash & Brow Services &raquo;
                </button>
            </p>
        </section>
    </div>
</main>

<!-- Nails Modal -->
<div class="modal fade" id="nailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-white">
            <div class="modal-body p-0">

                <div id="nailsCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="3000">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/nail1.png" class="d-block w-100" alt="Nail 1">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Classic French Nails</h5>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/nail2.png" class="d-block w-100" alt="Nail 2">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Trendy Gel Art</h5>
                            </div>
                        </div>
                        <div class="carousel-item">
                            <img src="~/nail3.png" class="d-block w-100" alt="Nail 3">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>Elegant Sparkle</h5>
                            </div>
                        </div>
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#nailsCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#nailsCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>

            </div>
            <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
        </div>
    </div>
</div>

